@model IEnumerable<EcoWave.Models.Configuracao>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeConfiguracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ValorConfiguracao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Usuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NomeConfiguracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorConfiguracao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Usuario.Email)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ConfiguracaoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ConfiguracaoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ConfiguracaoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
